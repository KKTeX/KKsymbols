\newcommand{\maybescale}[3]{%
  \ifdim #1 > #2%
    \ifdim #1 > 0pt%
      \edef\scalefactor{%
        \fpeval{ \strip@pt\dimexpr #2\relax / \strip@pt\dimexpr #1\relax }%
      }%
    \else%
      \def\scalefactor{1}%
    \fi%
    \scalebox{\scalefactor}[1]{#3}%
  \else%
    #3%
  \fi%
}

%maru系縦方向
